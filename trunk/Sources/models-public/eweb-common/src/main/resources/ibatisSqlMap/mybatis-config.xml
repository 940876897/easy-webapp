	DB2Dialect,PostgreSQLDialect,MySQLDialect,DerbyDialect,HSQLDialect 
	-->
	
	<plugins>
		<plugin interceptor="net.easyUI.willingOX.common.dao.ibatis3.plugin.OffsetLimitInterceptor">
			<property name="dialectClass" value="net.easyUI.willingOX.common.dao.ibatis3.dialect.MySQLDialect"/>
		</plugin>
	</plugins>

